<%- include ("../partials/header") %>
<div class="container">
  <div class="row">
    <div style="width: 30%; margin: 25px auto">
      <form action="/faqs/<%=faq._id%>/?_method=PUT" method="POST">
        <div class="form-group">
          <h5>Question</h5>
          <input
            class="form-control"
            type="text"
            name="faq[question]"
            value="<%=faq.question%>"
            required
          />
        </div>
        <div class="form-group">
          <h5>Answer</h5>
          <input
            class="form-control"
            type="text"
            name="faq[answer]"
            value="<%=faq.answer%>"
            required
          />
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
      <a href="/faqs">Go Back</a>
    </div>
  </div>
</div>
<%- include ("../partials/footer") %>
